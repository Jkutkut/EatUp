<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7FB"
    android:gravity="center">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/sf_pro_rounded_bold"
        android:gravity="center"
        android:text="Enter the QR Code"
        android:textColor="#1C1C1C"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/tvOTPMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWelcomeSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:gravity="center"
        android:text="Enter the code that you received from the administrator"
        android:textColor="#3D3D3D"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeTitle" />

    <TextView
        android:id="@+id/tvOTPMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:gravity="center"
        android:text="Enter the QR Code"
        android:textColor="#3D3D3D"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/llOTPCodes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/llOTPCodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edOTPCode1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/st_button_rounded_otp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edOTPCode2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/st_button_rounded_otp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/edOTPCode1"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/edOTPCode3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/st_button_rounded_otp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/edOTPCode2"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/edOTPCode4"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/st_button_rounded_otp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/edOTPCode3"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/edOTPCode5"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/st_button_rounded_otp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/edOTPCode4"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/edOTPCode6"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/st_button_rounded_otp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/edOTPCode5"
            android:layout_marginStart="10dp" />

    </LinearLayout>


    <Button
        android:id="@+id/btnConfirmOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/st_button_rounded_color"
        android:fontFamily="@font/sf_pro_rounded_bold"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llOTPCodes" />



</androidx.constraintlayout.widget.ConstraintLayout>